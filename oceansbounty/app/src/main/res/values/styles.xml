<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InputField"> <!--An input field with a light grey shadow.-->
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/round_corner_border</item>
    </style>

    <style name="RedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/crab_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreyButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButton"> <!--Clickable text-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Shadow"> <!--Shadow used by InputField-->
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@drawable/shadow_rect</item>
    </style>

    <style name="RedBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/crab_red</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomNavButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
    </style>

    <!--Table Details-->

    <style name="TableIcon_Available">
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:paddingVertical">30dp</item>
        <item name="android:text">Available</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/white_circle</item>
        <item name="android:backgroundTint">#98fb98</item>
    </style>

    <style name="TableIcon_Booked">
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:paddingVertical">30dp</item>
        <item name="android:text">Booked</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/white_circle</item>
        <item name="android:backgroundTint">@color/crab_red</item>
    </style>

    <style name="TableDetail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center|top</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:background">@drawable/light_grey_rect</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="TableDetailButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableInfoButton_Selected">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Card Details-->

    <style name="CardInfoChip">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:background">@drawable/white_circle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>